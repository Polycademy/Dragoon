{
	"name": "polycademy/dragoon",
	"description": "Experimental PHP Framework",
	"keywords": ["framework"],
	"homepage": "https://github.com/Polycademy/Dragoon",
	"license": "MIT",
	"authors": [{
		"name": "Roger Qiu",
		"email": "roger.qiu@polycademy.com",
		"homepage": "http://polycademy.com",
		"role": "Founder and Developer"
	}],
	"require": {
		"php": ">=5.4.12",
		"klein/klein": "~2.0",
		"monolog/monolog": "~1.7",
		"patchwork/utf8": "~1.1"
	},
	"require-dev": {
		"codeception/codeception": "~1.8",
		"squizlabs/php_codesniffer": "~1.5",
		"fabpot/php-cs-fixer": "~0.4",
		"phpmd/phpmd": "~1.5"
	},
	"suggest": {
		"ext-intl": "Use Intl for internationalisation",
		"ext-iconv": "Use iconv for character set conversions",
		"ext-mbstring": "Use Mbstring for for utf-8 operations"
	},
	"config": {
		"bin-dir": "bin/"
	},
	"bin": ["src/Commands/Dragoon"],
}